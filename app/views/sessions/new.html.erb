<% content_for :title, "Continue" %>
<%= render "shared/navbar" %>
<div class="row p-4 mt-5">
    <p class="h2">Welcome back Learner!</p>
    <p class="mb-4">Want to continue your progress?</p>
</div>
<div class="row mt-5">
    <form class="col-md-4 offset-4" action="/sessions" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="mb-4 row">
            <label for="username" class="form-label col-sm-4 col-form-label">Username</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="username" name="username">
            </div>
        </div>
        <div class="mb-4 row">
            <label for="password" class="form-label col-sm-4 col-form-label">Password</label>
            <div class="col-sm-8">
                <input type="password" class="form-control" id="password" name="password">
            </div>
        </div>
        <div class="mb-2 text-end">
            <button type="submit" class="btn btn-primary mb-3">Sign in</button>
        </div>
        <p>New learner? Start a new game <a href="/signup">here.</a></p>
        <%= render "shared/error_messages" %>
    </form>
</div>
